<h2>Update the drone</h2>

<form method="POST" action="edit">

  <label for="name">Name</label>
  <input type="text" value="{{this.name}}" name="name" />

  <label for="propellers">Propellers</label>
  <input type="number" value="{{this.propellers}}" name="propellers" />

  <label for="maxSpeed">Max Speed</label>
  <input type="number" value="{{this.maxSpeed}}" name="maxSpeed" />

  <button type="submit">Update</button>
</form>